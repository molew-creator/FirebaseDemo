<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="anchor" stylesheets="@primary.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aydin.firebasedemo.PrimaryController">
    <children>
        <VBox fx:id="vbox" alignment="CENTER" prefHeight="373.0" prefWidth="530.0" spacing="20.0" stylesheets="@primary.css">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
            <Label fx:id="msg" stylesheets="@primary.css" text="CSC325-SW Engineering Student: check out the console window for the output messages..." />
                <TextField fx:id="nameTextField" promptText="name" stylesheets="@primary.css" />
                <TextField fx:id="ageTextField" promptText="age" stylesheets="@primary.css" />
            <TextField fx:id="phoneTF" promptText="phone number" stylesheets="@primary.css" />
                <HBox fx:id="hbox" alignment="TOP_CENTER" prefHeight="55.0" prefWidth="518.0" spacing="10.0" stylesheets="@primary.css">
                    <children>
                        <Button fx:id="readButton" mnemonicParsing="false" onAction="#readButtonClicked" prefHeight="30.0" prefWidth="80.0" stylesheets="@primary.css" text="Read" />
                        <Button fx:id="writeButton" mnemonicParsing="false" onAction="#writeButtonClicked" prefHeight="30.0" prefWidth="80.0" stylesheets="@primary.css" text="Write" />
                        <Button fx:id="switchSecondaryViewButton" onAction="#switchToSecondary" prefHeight="30.0" prefWidth="180.0" stylesheets="@primary.css" text="Back to Login Screen" />
                    </children>
                </HBox>
                <TextArea fx:id="outputTextArea" prefHeight="218.0" prefWidth="507.0" stylesheets="@primary.css" />
            </children>
        </VBox>
    </children>
</AnchorPane>
