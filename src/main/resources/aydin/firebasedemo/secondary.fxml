<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aydin.firebasedemo.SecondaryController">
   <children>
      <VBox fx:id="anchor" alignment="CENTER" prefHeight="373.0" prefWidth="530.0" spacing="20.0" stylesheets="@secondary.css">
          <children>
              <Label text="Welcome!">
               <font>
                  <Font size="23.0" />
               </font>
            </Label>
            <Label text="Please Enter Email Address">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField fx:id="emailTF" prefHeight="6.0" prefWidth="149.0" promptText="email" />
              <Button fx:id="secondaryButton" onAction="#switchToPrimary" prefHeight="30.0" prefWidth="120.0" text="Sign in">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#registerButtonClicked" prefHeight="30.0" prefWidth="120.0" text="Register">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
          </children>
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
      </VBox>
   </children>
</AnchorPane>
